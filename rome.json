{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "useSingleVarDeclarator": "off",
        "useSimplifiedLogicExpression": "off",
        "noDelete": "off",
        "noDoubleEquals": "off",
        "useBlockStatements": "off",
        "noImplicitBoolean": "off"
      }
    }
  }
}