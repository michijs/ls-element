{
  "name": "@michijs/michijs",
  "author": "Lucas M. Segurado",
  "license": "MIT",
  "version": "2.0.0-beta.62",
  "files": [
    "dist/",
    "jsx-runtime/"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    "./jsx-runtime": {
      "import": "./jsx-runtime/index.js",
      "require": "./jsx-runtime/index.js"
    },
    "./jsx-dev-runtime": {
      "import": "./jsx-runtime/index.js",
      "require": "./jsx-runtime/index.js"
    },
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "baseUrl": "./src",
  "repository": {
    "type": "git",
    "url": "https://github.com/michijs/michijs.git"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/michijs"
  },
  "description": "Typescript library to build web components",
  "trustedDependencies": [
    "puppeteer"
  ],
  "scripts": {
    "start": "michi-server --start",
    "dist": "michi-server --dist",
    "build": "michi-server --build",
    "link": "michi-server --dist && bun link --force && tsc -w -p dist.tsconfig.json",
    "generate-types": "bun run ./tasks/generateTypes.ts",
    "start-benchmark-michijs": "michi-server --start --env=TESTING",
    "start-benchmark-vanilla": "michi-server --start --env=TESTING_VANILLA",
    "benchmark-michijs": "NODE_ENV=TESTING jest --updateSnapshot --no-cache --unhandled-rejections=strict --selectProjects=benchmark-michijs",
    "benchmark-vanilla": "NODE_ENV=TESTING_VANILLA jest --updateSnapshot --no-cache --unhandled-rejections=strict --selectProjects=benchmark-vanilla",
    "benchmark": "bun run benchmark-michijs && bun run benchmark-vanilla",
    "coverage": "jest --no-cache --collect-coverage --selectProjects=library-tests",
    "test-tsc": "tsc --noEmit --skipLibCheck",
    "test-tsc-w": "tsc --noEmit --skipLibCheck -w",
    "test": "jest --no-cache --selectProjects=library-tests",
    "test-w": "jest --watch --no-cache --selectProjects=library-tests",
    "usnap": "jest --updateSnapshot --unhandled-rejections=strict --selectProjects=library-tests",
    "run-all-tests": "bun run test-tsc && bun run test && bun run benchmark"
  },
  "keywords": [
    "web-components",
    "custom elements",
    "built-in elements",
    "Autonomous custom elements"
  ],
  "devDependencies": {
    "@michijs/dev-server": "0.5.14",
    "@reduxjs/toolkit": "1.9.7",
    "@types/jest": "29.5.12",
    "esbuild-jest-transform": "2.0.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-puppeteer": "10.0.1",
    "puppeteer": "22.6.1",
    "redux": "5.0.1",
    "ts-jest": "29.1.2",
    "@michijs/htmltype": "0.2.12",
    "bun": "^1.1.3",
    "typescript": "5.4.5"
  },
  "peerDependencies": {
    "csstype": "^3.1.3"
  },
  "jest": {
    "testTimeout": 30000,
    "projects": [
      {
        "displayName": "library-tests",
        "automock": false,
        "testEnvironment": "jsdom",
        "testRegex": "src/.*spec.*",
        "transform": {
          "\\.(js|jsx|ts|tsx)$": "esbuild-jest-transform"
        }
      },
      {
        "displayName": "benchmark-vanilla",
        "preset": "jest-puppeteer",
        "testRegex": "tests/benchmark/Vanilla.spec.tsx",
        "automock": false,
        "transform": {
          "\\.(js|jsx|ts|tsx)$": "esbuild-jest-transform"
        }
      },
      {
        "displayName": "benchmark-michijs",
        "preset": "jest-puppeteer",
        "testRegex": "tests/benchmark/MichiJS.spec.tsx",
        "automock": false,
        "transform": {
          "\\.(js|jsx|ts|tsx)$": "esbuild-jest-transform"
        }
      }
    ]
  }
}
